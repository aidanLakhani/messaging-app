{
  "name": "messaging-app",
  "version": "1.0.0",
  "description": "Messaging app built by Aidan",
  "main": "server/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server/server.js",
    "client": "cd client && npm run dev",
    "server": "nodemon server/server.js",
    "dev": "concurrently -n 'server,client' -c 'cyan,magenta' \"npm run server\" \"npm run client\""
  },
  "author": "Aidan Lakhani",
  "license": "ISC",
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.10"
  }
}
